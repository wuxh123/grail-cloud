<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.backend.dao.BlackIPDao">

	<sql id="where">
		<where>
			<if test="ip != null and ip != ''">
				<bind name="_ip" value="'%' + ip + '%'"/>
				and t.ip like #{_ip}
			</if>
		</where>
	</sql>
	<select id="count" resultType="int">
		select count(*) from black_ip t
		<include refid="where" />
	</select>

	<select id="findData" resultType="BlackIP">
		select * from black_ip t
		<include refid="where" />
		order by t.createTime desc
		<if test="start != null and start >= 0 and length != null and length > 0">
			limit #{start}, #{length}
		</if>
	</select>
</mapper>